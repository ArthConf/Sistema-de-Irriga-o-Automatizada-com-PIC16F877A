#include <16F877A.h>
#FUSES NOWDT, XT, NOPUT, NOPROTECT, NODEBUG, NOBROWNOUT, NOLVP, NOCPD, NOWRT
#use delay(clock=4000000)

#use I2C(master, sda=PIN_C4, scl=PIN_C3, slow=100000)
#include "i2c_Flex_LCD.c"

#define SENSOR_DIGITAL_PIN  PIN_A1    // D0 do sensor no RA1
#define RELE_PIN            PIN_B0

void main() {
    set_tris_a(0b00000010);        // RA1 como entrada digital
    set_tris_b(0b11111110);        // RB0 como saída (relé)
    output_high(RELE_PIN);         // Relé desligado no início

    // --- Inicializa LCD ---
    lcd_init(0x4E, 16, 2);
    lcd_backlight_led(ON);
    lcd_putc('\f');
    lcd_gotoxy(1,1);
    printf(lcd_putc, "IRRIGACAO");
    lcd_gotoxy(1,2);
    printf(lcd_putc, "CONFESSOR");
    delay_ms(2000);
    lcd_putc('\f');

    int estado_anterior = -1;

    while(TRUE) {
        int seco = input(SENSOR_DIGITAL_PIN);  // 1 = seco, 0 = úmido

        if(seco != estado_anterior) {
            lcd_putc('\f');
            if(seco == 1) {
                output_low(RELE_PIN);   // Liga bomba/relé
                lcd_gotoxy(1,1);
                printf(lcd_putc, "Solo Seco      ");
                lcd_gotoxy(1,2);
                printf(lcd_putc, "IRRIGANDO      ");
            } else {
                output_high(RELE_PIN);  // Desliga bomba/relé
                lcd_gotoxy(1,1);
                printf(lcd_putc, "Solo Umido     ");
                lcd_gotoxy(1,2);
                printf(lcd_putc, "UMIDO          ");
            }
            estado_anterior = seco;
        }
        delay_ms(500);
    }
}

#include <16F877A.h>
#FUSES NOWDT, XT, NOPUT, NOPROTECT, NODEBUG, NOBROWNOUT, NOLVP, NOCPD, NOWRT
#use delay(clock=4000000)

// Configuração I2C para LCD
#use I2C(master, sda=PIN_C4, scl=PIN_C3, slow=100000)

#include "i2c_Flex_LCD.c"   // LCD via I2C

#define SENSOR_PIN  PIN_A1     // Pino digital do sensor de umidade
#define RELE_PIN    PIN_B0     // Pino do relé

void main() {
    set_tris_a(0b00000010);   // RA1 como entrada (sensor)
    set_tris_b(0b11111110);   // RB0 como saída (relé)
    output_high(RELE_PIN);    // Garante relé desligado no início

    // Inicialização do LCD
    lcd_init(0x4E, 16, 2);    // Endereço padrão, 16 colunas, 2 linhas
    lcd_backlight_led(ON);
    lcd_putc('\f');           // Limpa LCD

    // Mensagem inicial
    lcd_gotoxy(1,1);
    printf(lcd_putc, "IRRIGACAO");
    lcd_gotoxy(1,2);
    printf(lcd_putc, "CONFESSOR");
    delay_ms(2000);
    lcd_putc('\f');  // Limpa LCD após mensagem inicial

    while(TRUE) {
        if(input(SENSOR_PIN) == 1) {    // 1 = solo seco (ajuste conforme o seu sensor)
            output_low(RELE_PIN);       // Liga bomba/relé
            lcd_gotoxy(1,1);
            printf(lcd_putc, "Solo Seco       ");
            lcd_gotoxy(1,2);
            printf(lcd_putc, "- IRRIGANDO     ");
        } else {
            output_high(RELE_PIN);      // Desliga bomba/relé
            lcd_gotoxy(1,1);
            printf(lcd_putc, "Solo Umido      ");
            lcd_gotoxy(1,2);
            printf(lcd_putc, "Irrig. Desligada");
        }
        delay_ms(500);                  // Pequeno delay para estabilidade
    }
}
